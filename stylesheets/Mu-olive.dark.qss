QMainWindow,
QWidget,
QFrame,
QTreeView,
QHeaderView,
QHeaderView::section,
QAbstractView,
QAbstractItemView,
QAbstractView {
    background-color: rgb(56, 56, 32);
}


QToolBar {
    border-color: rgb(112, 112, 64);
    background-color: rgb(72, 72, 40);
    border-width: 2px;
    border-radius: 6px;
    margin: 1px;
    padding: 2px;
}

QToolBar::handle {
    height: 10px;
    width: 10px;
    background-color: rgb(112, 112, 64);
    border-color: rgb(112, 112, 64);
    border-radius: 3px;
}

QToolBar::handle:horizontal {
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    margin-right: 2px;
    margin-left: 0px
}

QToolBar::handle:vertical {
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    margin-bottom: 2px;
    margin-top: 0px
}

QToolButton {
    border-radius: 2px;
    background-color: rgb(72, 72, 40);
}

QPushButton {
    background-color: rgb(72, 72, 40);
    border-radius: 2px;
    border-color: rgb(180, 180, 120);
    padding-right: 8px;
    padding-left: 8px;
}

QToolButton:hover, QPushButton :hover {
    background-color: rgb(112, 112, 64);
}

QToolButton:checked, QPushButton:checked, QPushButton:focus {
    background-color: rgb(56, 56, 32);
}

QTabBar {
    background-color: rgb(56, 56, 32);
}

QTabBar::tab {
    background-color: rgb(72, 72, 40);
    border-color: rgb(112, 112, 64);
}

QTabBar::tab:selected {
    background-color: rgb(56, 56, 32);
}

/* Scrollbars */

QScrollBar:horizontal,
QScrollBar:vertical {
    background-color: rgb(56, 56, 32);
    border: none;
}

QScrollBar:vertical {
    border-left-style: solid;
    border-width: 1px;
    border-color: rgb(13, 13, 13);
}

QScrollBar:horizontal {
    border-top-style: solid;
    border-width: 1px;
    border-color: rgb(13, 13, 13);
}

QScrollBar::handle:horizontal,
QScrollBar::handle:vertical {
    background-color: rgb(112, 112, 64);
    border-color: rgb(56, 56, 32);
    border-radius: 4px;
}

QScrollBar::sub-line:horizontal,
QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal,
QScrollBar::add-line:vertical {
    background-color: rgb(56, 56, 32);
    border: none;
}

QScrollBar::add-page:vertical,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:vertical,
QScrollBar::sub-page:horizontal {
    background-color: rgb(56, 56, 32);
    border: none;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical,
QScrollBar::left-arrow:horizontal,
QScrollBar::right-arrow:horizontal {
    background-color: rgba(160, 160, 120, 0.5);
    border-style: solid;
    border-width: 1px;
    border-radius: 2px;
    border-color: rgb(56, 56, 32);
}


/* Controls */

QComboBox,
QComboBox::drop-down,
QComboBox::separator,
QLineEdit,
QTextEdit,
QSpinBox {
    background-color: rgb(56, 56, 32);
    border-color: rgb(112, 112, 64);
    border-style: solid;
    border-radius: 4px;
    min-height: 12px;
}

QLabel {
    background-color: transparent;
}

QLineEdit:focus,
QSpinBox:focus {
    border-color: rgb(180, 180, 120);
}

QSpinBox::down-button,
QSpinBox::up-button {
    border-color: rgb(112, 112, 64);
    border-style: solid;
    border-radius: 2px;
}

QSlider::groove:vertical,
QSlider::groove:horizontal {
    background-color: rgb(56, 56, 32);
    border-radius: 4px;
}

QGroupBox {
    background-color: rgb(56, 56, 32);
}

QSlider::handle:vertical,
QSlider::handle:horizontal {
    background-color: rgb(180, 180, 120);
}

QSlider::groove {
    border-color: rgb(112, 112, 64);
    border-radius: 4px;
}

QSplitter::handle {
    background-color: rgb(72, 72, 40);
    width: 6px;
    height: 6px;
    border-color: rgb(180, 180, 120);
}

/* Timeline */

TL_StyleDelegate {
    qproperty-faceDark: rgb(40, 40, 24);
    qproperty-face: rgb(56, 56, 32);
    qproperty-hilight: rgb(112, 112, 64);
    qproperty-shadow: rgb(40, 40, 24);
    qproperty-shadowDark: rgb(24, 24, 12);
    qproperty-ruler: rgb(112, 112, 64);
    qproperty-grayLight: rgb(112, 112, 64);
    qproperty-grayDark: rgb(40, 40, 24);

    /*qproperty-selectionLayer:  rgb(180, 180, 120);*/

    qproperty-trackBackGround: rgb(112, 112, 64);
    qproperty-trackBackGroundAlternate: rgb(72, 72, 40);

    qproperty-drawing: rgb(112, 112, 64);
    qproperty-symbol: rgb(112, 112, 64);

    /*qproperty-selectionLayer: rgb(180, 180, 120);*/
    qproperty-selectionCell: rgb(180, 180, 120);

    qproperty-groupBackground: rgb(72, 72, 40);
    qproperty-groupBackgroundDarker: rgb(56, 56, 32);
    qproperty-layerParamBackground: rgb(72, 72, 40);

}
