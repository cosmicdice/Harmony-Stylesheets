QMainWindow,
QWidget,
QFrame,
QTreeView,
QHeaderView,
QHeaderView::section,
QAbstractView,
QAbstractItemView,
QAbstractView {
    background-color: rgb(32, 56, 56);
}


QToolBar {
    border-color: rgb(72, 120, 120);
    background-color: rgb(48, 80, 80);
    border-width: 2px;
    border-radius: 6px;
    margin: 1px;
    padding: 2px;
}

QToolBar::handle {
    height: 10px;
    width: 10px;
    background-color: rgb(72, 120, 120);
    border-color: rgb(72, 120, 120);
    border-radius: 3px;
}

QToolBar::handle:horizontal {
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    margin-right: 2px;
    margin-left: 0px
}

QToolBar::handle:vertical {
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    margin-bottom: 2px;
    margin-top: 0px
}

QToolButton {
    border-radius: 2px;
    background-color: rgb(48, 80, 80);
}

QPushButton {
    background-color: rgb(48, 80, 80);
    border-radius: 2px;
    border-color: rgb(140, 220, 220);
    padding-right: 8px;
    padding-left: 8px;
}

QToolButton:hover, QPushButton :hover {
    background-color: rgb(72, 120, 120);
}

QToolButton:checked, QPushButton:checked, QPushButton:focus {
    background-color: rgb(32, 56, 56);
}

QTabBar {
    background-color: rgb(32, 56, 56);
}

QTabBar::tab {
    background-color: rgb(48, 80, 80);
    border-color: rgb(72, 120, 120);
}

QTabBar::tab:selected {
    background-color: rgb(32, 56, 56);
}

/* Scrollbars */

QScrollBar:horizontal,
QScrollBar:vertical {
    background-color: rgb(32, 56, 56);
    border: none;
}

QScrollBar:vertical {
    border-left-style: solid;
    border-width: 1px;
    border-color: rgb(13, 13, 13);
}

QScrollBar:horizontal {
    border-top-style: solid;
    border-width: 1px;
    border-color: rgb(13, 13, 13);
}

QScrollBar::handle:horizontal,
QScrollBar::handle:vertical {
    background-color: rgb(72, 120, 120);
    border-color: rgb(32, 56, 56);
    border-radius: 4px;
}

QScrollBar::sub-line:horizontal,
QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal,
QScrollBar::add-line:vertical {
    background-color: rgb(32, 56, 56);
    border: none;
}

QScrollBar::add-page:vertical,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:vertical,
QScrollBar::sub-page:horizontal {
    background-color: rgb(32, 56, 56);
    border: none;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical,
QScrollBar::left-arrow:horizontal,
QScrollBar::right-arrow:horizontal {
    background-color: rgba(120, 200, 200, 0.5);
    border-style: solid;
    border-width: 1px;
    border-radius: 2px;
    border-color: rgb(32, 56, 56);
}


/* Controls */

QComboBox,
QComboBox::drop-down,
QComboBox::separator,
QLineEdit,
QTextEdit,
QSpinBox {
    background-color: rgb(32, 56, 56);
    border-color: rgb(72, 120, 120);
    border-style: solid;
    border-radius: 4px;
    min-height: 12px;
}

QLabel {
    background-color: transparent;
}

QLineEdit:focus,
QSpinBox:focus {
    border-color: rgb(140, 220, 220);
}

QSpinBox::down-button,
QSpinBox::up-button {
    border-color: rgb(72, 120, 120);
    border-style: solid;
    border-radius: 2px;
}

QSlider::groove:vertical,
QSlider::groove:horizontal {
    background-color: rgb(32, 56, 56);
    border-radius: 4px;
}

QGroupBox {
    background-color: rgb(32, 56, 56);
}

QSlider::handle:vertical,
QSlider::handle:horizontal {
    background-color: rgb(140, 220, 220);
}

QSlider::groove {
    border-color: rgb(72, 120, 120);
    border-radius: 4px;
}

QSplitter::handle {
    background-color: rgb(48, 80, 80);
    width: 6px;
    height: 6px;
    border-color: rgb(140, 220, 220);
}

/* Timeline */

TL_StyleDelegate {
    qproperty-faceDark: rgb(24, 40, 40);
    qproperty-face: rgb(32, 56, 56);
    qproperty-hilight: rgb(72, 120, 120);
    qproperty-shadow: rgb(24, 40, 40);
    qproperty-shadowDark: rgb(12, 24, 24);
    qproperty-ruler: rgb(72, 120, 120);
    qproperty-grayLight: rgb(72, 120, 120);
    qproperty-grayDark: rgb(24, 40, 40);

    /*qproperty-selectionLayer:  rgb(140, 220, 220);*/

    qproperty-trackBackGround: rgb(72, 120, 120);
    qproperty-trackBackGroundAlternate: rgb(48, 80, 80);

    qproperty-drawing: rgb(72, 120, 120);
    qproperty-symbol: rgb(72, 120, 120);

    /*qproperty-selectionLayer: rgb(140, 220, 220);*/
    qproperty-selectionCell: rgb(140, 220, 220);

    qproperty-groupBackground: rgb(48, 80, 80);
    qproperty-groupBackgroundDarker: rgb(32, 56, 56);
    qproperty-layerParamBackground: rgb(48, 80, 80);

}
