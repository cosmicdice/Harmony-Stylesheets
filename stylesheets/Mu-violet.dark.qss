QMainWindow,
QWidget,
QFrame,
QTreeView,
QHeaderView,
QHeaderView::section,
QAbstractItemView,
QAbstractView {
    background-color: rgb(56, 48, 96);
}

QToolBar > * {
    background-color: rgb(80, 64, 120);
}

QToolBar {
    border-color: rgb(120, 96, 160);
    background-color: rgb(80, 64, 120);
    border-width: 2px;
    border-radius: 6px;
    margin: 1px;
    padding: 2px;
}

QToolBar::handle {
    height: 10px;
    width: 10px;
    background-color: rgb(120, 96, 160);
    border-color: rgb(120, 96, 160);
    border-radius: 3px;
}

QToolBar::handle:horizontal {
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    margin-right: 2px;
    margin-left: 0px
}

QToolBar::handle:vertical {
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    margin-bottom: 2px;
    margin-top: 0px
}

QToolButton {
    border-radius: 2px;
    background-color: rgb(80, 64, 120);
}

QPushButton {
    background-color: rgb(80, 64, 120);
    border-radius: 2px;
    border-color: rgb(200, 160, 240);
    padding-right: 8px;
    padding-left: 8px;
}

QToolButton:hover,
QPushButton:hover {
    background-color: rgb(120, 96, 160);
}

QToolButton:checked,
QPushButton:checked,
QPushButton:focus {
    background-color: rgb(56, 48, 96);
}

QTabBar {
    background-color: rgb(56, 48, 96);
}

QTabBar::tab {
    background-color: rgb(80, 64, 120);
    border-color: rgb(120, 96, 160);
}

QTabBar::tab:selected {
    background-color: rgb(56, 48, 96);
}

/* Scrollbars */

QScrollBar:horizontal,
QScrollBar:vertical {
    background-color: rgb(56, 48, 96);
    border: none;
}

QScrollBar:vertical {
    border-left-style: solid;
    border-width: 1px;
    border-color: rgb(13, 13, 13);
}

QScrollBar:horizontal {
    border-top-style: solid;
    border-width: 1px;
    border-color: rgb(13, 13, 13);
}

QScrollBar::handle:horizontal,
QScrollBar::handle:vertical {
    background-color: rgb(120, 96, 160);
    border-color: rgb(56, 48, 96);
    border-radius: 4px;
}

QScrollBar::sub-line:horizontal,
QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal,
QScrollBar::add-line:vertical {
    background-color: rgb(56, 48, 96);
    border: none;
}

QScrollBar::add-page:vertical,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:vertical,
QScrollBar::sub-page:horizontal {
    background-color: rgb(56, 48, 96);
    border: none;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical,
QScrollBar::left-arrow:horizontal,
QScrollBar::right-arrow:horizontal {
    background-color: rgba(180, 150, 230, 0.5);
    border-style: solid;
    border-width: 1px;
    border-radius: 2px;
    border-color: rgb(56, 48, 96);
}

/* Controls */

QComboBox,
QComboBox::drop-down,
QComboBox::separator,
QLineEdit,
QTextEdit,
QSpinBox {
    background-color: rgb(56, 48, 96);
    border-color: rgb(120, 96, 160);
    border-style: solid;
    border-radius: 4px;
    min-height: 12px;
}

QLabel {
    background-color: transparent;
}

QLineEdit:focus,
QSpinBox:focus {
    border-color: rgb(200, 160, 240);
}

QSpinBox::down-button,
QSpinBox::up-button {
    border-color: rgb(120, 96, 160);
    border-style: solid;
    border-radius: 2px;
}

QSlider::groove:vertical,
QSlider::groove:horizontal {
    background-color: rgb(56, 48, 96);
    border-radius: 4px;
}

QGroupBox {
    background-color: rgb(56, 48, 96);
}

QSlider::handle:vertical,
QSlider::handle:horizontal {
    background-color: rgb(200, 160, 240);
}

QSlider::groove {
    border-color: rgb(120, 96, 160);
    border-radius: 4px;
}

QSplitter::handle {
    background-color: rgb(80, 64, 120);
    width: 6px;
    height: 6px;
    border-color: rgb(200, 160, 240);
}

/* Timeline */

TL_StyleDelegate {
    qproperty-faceDark: rgb(40, 32, 80);
    qproperty-face: rgb(56, 48, 96);
    qproperty-hilight: rgb(120, 96, 160);
    qproperty-shadow: rgb(40, 32, 80);
    qproperty-shadowDark: rgb(24, 16, 48);
    qproperty-ruler: rgb(120, 96, 160);
    qproperty-grayLight: rgb(120, 96, 160);
    qproperty-grayDark: rgb(40, 32, 80);

    qproperty-trackBackGround: rgb(120, 96, 160);
    qproperty-trackBackGroundAlternate: rgb(80, 64, 120);

    qproperty-drawing: rgb(120, 96, 160);
    qproperty-symbol: rgb(120, 96, 160);

    /*qproperty-selectionLayer: rgb(200, 160, 240);*/
    qproperty-selectionCell: rgb(200, 160, 240);

    qproperty-groupBackground: rgb(80, 64, 120);
    qproperty-groupBackgroundDarker: rgb(56, 48, 96);
    qproperty-layerParamBackground: rgb(80, 64, 120);
}
